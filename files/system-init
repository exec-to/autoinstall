iptables -N SAMBA_RULES
iptables -I INPUT -p tcp -m multiport --dports 139,445 -j SAMBA_RULES
iptables -A SAMBA_RULES -m set --match-set smb_clients src -j ACCEPT
iptables -A SAMBA_RULES -j DROP