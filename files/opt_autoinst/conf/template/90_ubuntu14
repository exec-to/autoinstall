#!/bin/sh
exec tail -n +3 $0

menuentry "Install Ubuntu 14.04 server amd64" {
    set bootdir="/images/ubuntu/14/amd64"
    set confdir="/boot/grub/conf.d/s__srv_name__"
    linux (tftp)$bootdir/linux auto=true priority=critical url=tftp://10.0.222.1$confdir/s__srv_name__.seed DEBCONF_DEBUG=5 --- quiet
    initrd (tftp)$bootdir/initrd.gz
}

